@model ERP.Entities.Models.Scheme

@{
    //ViewBag.Title = "TradeProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/AdminLTE/plugins/datepicker/css/datepicker3.css" rel="stylesheet" />
<script src="~/AdminLTE/plugins/datepicker/js/bootstrap-datepicker.js"></script>
@{
    IEnumerable<SelectListItem> schemeTypes = ViewBag.schemeTypes;
    IEnumerable<SelectListItem> products = ViewBag.products;
}

<style>
    .form-horizontal .control-label {
    padding-top: 7px;
    margin-bottom: 0;
    text-align: left;
    padding-left: 1px;
}
</style>
<div class="container">
    @using (Html.BeginForm("TradeProduct", "Schemes",
            new { area = "Sales" },
            FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Add Trade Scheme</legend>
            @*<div class="form-horizontal">
                <h4>Scheme</h4>
                <hr />*@
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.LabelFor(model => model.ProductId, htmlAttributes: new { @class = "control-label col-sm-2" })
                    @Html.DropDownListFor(model => model.ProductId, products, "--Select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                </div>
                
            </div>           

            <div class="form-group">
                <div class="col-sm-5">
                    @Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "control-label col-sm-2" })
                    @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-sm-5">
                    @Html.LabelFor(model => model.ToDate, htmlAttributes: new { @class = "control-label col-sm-2" })
                    @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    @Html.LabelFor(model => model.SchemeTypeId, htmlAttributes: new { @class = "control-label col-sm-2" })
                    @Html.DropDownListFor(model => model.SchemeTypeId, schemeTypes, "--Select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SchemeTypeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    @Html.LabelFor(model => model.SOQtyLimit, htmlAttributes: new { @class = "control-label col-sm-2" })
                    @Html.EditorFor(model => model.SOQtyLimit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SOQtyLimit, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    @Html.LabelFor(model => model.EveryPeriodforQty, htmlAttributes: new { @class = "control-label col-sm-2" })
                    @Html.EditorFor(model => model.EveryPeriodforQty, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EveryPeriodforQty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    @Html.LabelFor(model => model.FreeQty, htmlAttributes: new { @class = "control-label col-sm-2" })
                    @Html.EditorFor(model => model.FreeQty, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FreeQty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <div class="checkbox">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-sm-2" })
                        @Html.EditorFor(model => model.Status)
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </fieldset>
    }
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <script>
        $(function () {
            $(".datecontrol").datepicker();
        });
    </script>
