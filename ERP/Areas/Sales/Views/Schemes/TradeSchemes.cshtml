@model IEnumerable<ERP.Entities.Models.Scheme>

@{
    ViewBag.Title = "TradeSchemes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TradeSchemes</h2>

<p>
    @Html.ActionLink("Create New", "TradeProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SchemeTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SOQtyLimit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EveryPeriodforQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FreeQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchemeTypeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SOQtyLimit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EveryPeriodforQty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreeQty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
